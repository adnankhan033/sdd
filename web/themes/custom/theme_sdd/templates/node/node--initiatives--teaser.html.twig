<div class="mb-10 w-full">
	<div
		class="image mb-10 h-[310px]">
        {{ content.field_image }}
	</div>
	<p class="mb-5 text-sm text-[#99A1AF]">
		{{ node.getCreatedTime()|format_date('olivero_medium') }}
	</p>
	<h3 class="text-2xl">{{  short_label }}</h3>
</div>

