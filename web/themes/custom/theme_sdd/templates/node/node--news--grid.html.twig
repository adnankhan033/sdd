<div class="flex group-[:not(.list)]/layout:flex-col  group-[.list]/layout:flex-col md:group-[.list]/layout:flex-row  group-[.list]/layout:gap-5 md:group-[.list]/layout:items-center items-start justify-between border-s border-[#D4D4D8] md:ps-6 hover:border-orange transition-all group/news ">
	<div class="group-[:not(.list)]/layout:mb-10 w-full group-[.list]/layout:flex-col md:group-[.list]/layout:flex-row  group-[.list]/layout:flex group-[.list]/layout:items-center group-[.list]/layout:gap-5 ">
		<div
			class="image w-full group-[:not(.list)]/layout:mb-10  flex-shrink-0 group-[.list]/layout:me-auto md:group-[.list]/layout:me-0 md:group-[.list]/layout:h-[200px] md:group-[.list]/layout:w-[200px] h-[310px]">
			
			{{ content.field_image }}
		</div>
		<div class="group-[.list]/layout:me-auto md:group-[.list]/layout:me-0">
			<p class="mb-5 text-sm text-[#99A1AF]">
				{{ node.getCreatedTime()|format_date('olivero_medium') }}
			</p>
			<h3 class="text-2xl">
				{{ short_label }}
			</h3>
		</div>
	</div>

	<a href="{{ url }}" class="group/btn  flex-shrink-0 relative h-[51px] rounded-full border border-[#D4D4D8] bg-[#F9FAFB] py-3 pe-[65px]
			                 ps-7 text-[#6A7282] transition-all
			                                 group-hover/news:border-orange group-hover/news:bg-[#FFF3E9] group-hover/news:text-orange
			
			                 hover:border-orange hover:bg-[#FFF3E9] hover:text-orange">
		<span class=" ">{{ "View all"|t }}</span>

		<span class="absolute -end-1 top-0 flex h-[50px] w-[53px] items-center justify-center rounded-full border
				                  border-[#D4D4D8] bg-white transition-all
				                  group-hover/news:border-orange group-hover/news:bg-orange
				                  group-hover/btn:border-orange group-hover/btn:bg-orange">
			<i class="fa-regular fa-arrow-right text-xs text-[#99A1AF]
				                    group-hover/news:text-white
				                     group-hover/btn:text-white"></i>
		</span>
	</a>

</div>
