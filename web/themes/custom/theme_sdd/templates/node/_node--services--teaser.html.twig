<div class="service_inner service_inner2 {{  bg_class }}" id="services">
	<div class="service_content d-flex align-self-center">
		<div class="icon_img">

			{% if node.field_icon.entity is not empty %}
				<img src="{{ file_url(node.field_icon.entity.uri.value) }}" alt="{{ node.field_icon.alt }}" class="my-custom-class"/>
			{% endif %}
		</div>
		<div class="services_content_flex_cenrer">
			<h6>
				{{ node.field_short_title.value|upper }}
			</h6>
			<h4>
				<a href="{{ url }}">{{ short_label }}</a>
			</h4>
			<a href="{{ url }}">{{ "Get Service"|t }}
				<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
			</a>
		</div>
	</div>
	<div
		class="main_img" data-aos="fade-up" data-aos-duration="1000">
		{% if node.field_image.entity is not empty %}
			<img src="{{ file_url(node.field_image.entity.uri.value) }}" alt="{{ node.field_image.alt }}" class="my-custom-class"/>
		{% endif %}
	</div>
</div>
