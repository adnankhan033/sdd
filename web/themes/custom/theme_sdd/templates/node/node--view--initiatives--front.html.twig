<div class="relative flex h-full min-h-[600px] flex-col items-start justify-center py-[60px]">
	<div class="image absolute -z-[1] h-full w-full">
		{{ content.field_image }}
	</div>

	<div class="w-full px-6 md:px-[30px] xl:px-[60px] flex flex-col justify-between h-full">


		<div class="mb-10 max-w-[450px] text-white">

			<div class="mb-[26px] inline-block rounded-full bg-[#353535] p-3 text-xs font-bold text-white">

				{{ content.field_tags|render|striptags|trim|raw }}
			</div>
			<h2 class="mb-8 text-4xl font-bold md:text-[44px]">

				{{  short_label }}
			</h2>

			<h5 class="mb-7 text-xl text-orange md:mb-8 md:text-[28px]">

				{{ content.field_sh_highlights|render|striptags|trim|raw }}
			</h5>

			<p class="md:text-lg">

				{{ body_short|render|striptags|trim|raw }}
			</p>
		</div>

		<div class="flex flex-col gap-3 md:flex-row">

<div class="w-full rounded-xl bg-white p-4 md:max-w-[275px] md:rounded-e-none md:p-7 flex flex-col justify-end">


				<h5 class="text-xl font-bold md:text-[33px]">{{ content.field_annual_carbon_removal|render|striptags|trim|raw }}

					<span class="text-lg">{{"CO2"|t }}</span>
				</h5>
				<p class="text-sm text-[#353535] md:text-lg">

					{{ "Annual carbon removal"|t }}
				</p>
			</div>

<div class="w-full rounded-xl bg-white p-4 md:max-w-[275px] md:rounded-s-none md:p-7 flex flex-col justify-end">


				<h5 class="text-xl font-bold md:text-[33px]">{{ content.field_year_of_delivery }}</h5>

				<p class="text-sm text-[#353535] md:text-lg">

					{{ "Year of delivery"|t }}
				</p>
			</div>
		</div>
	</div>
</div>
