	<div class="flex flex-col md:flex-row gap-6 items-center border-b border-[#D4D4D8]  pb-8 md:pb-16">
		<i class="fa-light fa-hourglass-clock md:text-4xl text-5xl lg:text-5xl xl:text-[60px] text-[#99A1AF]"></i>
		<h4 class="text-orange font-bold md:text-4xl text-5xl lg:text-5xl xl:text-[60px]">
			{{ content.field_sh_number|render|striptags|trim|raw  }}
		</h4>
		<p class="text-sm">
			{{ content.field_title|render|striptags|trim|raw  }}
		</p>
	</div>

{% endif %}
