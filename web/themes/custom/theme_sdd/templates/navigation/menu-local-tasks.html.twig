{#
/**
 * @file
 * Theme override to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing secondary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 */
#}
{% if primary %}
  <h2 class="sr-only hidden">{{ 'Primary tabs'|t }}</h2>
  <nav class="border-b border-gray-200 mb-4 mt-5" aria-labelledby="primary-tabs-title" data-drupal-nav-tabs>
    <ul class="flex flex-wrap -mb-px" data-drupal-nav-tabs-target>{{ primary }}</ul>
  </nav>
{% endif %}
{% if secondary %}
  <h2 id="secondary-tabs-title" class="sr-only hidden">{{ 'Secondary tabs'|t }}</h2>
  <nav class="mt-4" aria-labelledby="secondary-tabs-title" data-drupal-nav-tabs>
    <ul class="flex flex-wrap border-b border-gray-100" data-drupal-nav-tabs-target>{{ secondary }}</ul>
  </nav>
{% endif %}
