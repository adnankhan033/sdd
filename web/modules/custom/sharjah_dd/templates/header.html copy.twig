<header>
	<div class="container mx-auto px-4">
		<div class="flex items-center justify-between lg:py-6 py-5">

			<button class="flex items-center lg:hidden" type="button">
				<div class="hamburger-toggle">
					<div class="hamburger">
						<span class="bg-black"></span>
						<span class="bg-black"></span>
						<span class="bg-black"></span>
					</div>
				</div>
			</button>

			<div>
				<img src="assets/images/Logo.svg" class="max-w-full" alt/>
			</div>

			<div class="hidden lg:block">
				<img src="assets/images/Logo2.svg" class="max-w-full" alt/>
			</div>

			<button class="search">
				<i class="fa-regular fa-search text-lg transition-all font-semibold"></i>

			</button>

		</div>
	</div>

	<nav class="bg-secondary">
		<div class="container mx-auto px-4 h-full">
			<div class="lg:flex items-center justify-between h-full">
				<div class="hidden- lg:block main-menu pt-3 lg:pt-0  h-full">
					<ul class="flex lg:items-center lg:gap-6 gap-4">

						{% set main_items = simplify_menu('main') %}

						{% for item in main_items.menu_tree %}

							{% set item_class = item.submenu ? 
    'lg:py-4 pb-4 dropdown-item group/dropdwon transition-all lg:border-0 border-b border-[#D4D4D8]' : 
    'lg:py-4 pb-4 hover:text-orange transition-all lg:border-0 border-b border-[#D4D4D8]' 
  %}


							{% if item.submenu is defined and item.submenu|length > 0 %}

								<li class="{{ item_class }}">
									<a class="flex items-center  group-hover/dropdwon:text-orange  gap-2 hover:text-orange">
										<span>
											{{ item.text }}
										</span>
										<i class="fa-regular fa-arrow-up-right text-xs"></i>
									</a>
									<div class="dropdown-menu absolute opacity-0 -z-50 bg-white pt-4 pb-2 border-t-2 min-w-[200px] mt-4 border-orange lg:transition-all lg:group-hover/dropdwon:opacity-100 lg:group-hover/dropdwon:!z-20">
										<ul class="grid gap-4  ">
											{% for child in item.submenu %}

												<li class=" dropdown-item  group/dropdwon transition-all  lg:border-0 border-b border-[#D4D4D8]">
													<a href {{ child.url }} class="flex justify-between items-center lg:py-4  pb-4 px-4 lg:hover:bg-[#FFF3E9] group/item hover:text-orange">
														<span>{{ child.text }}</span>
														<i class="fa-regular fa-arrow-right text-sm transition-all  group-hover/item:-rotate-45"></i>
													</a>
												</li>
											{% endfor %}
										</ul>
									</div>
								</li>
							{% else %}
								<li class="{{ item_class }}">
									<a href="{{ item.url }}">
										{{ item.text }}
									</a>
								</li>

							{% endif %}
						{% endfor %}

					</ul>

					<div class=" lg:hidden h-full flex flex-col justify-end mb-11">

						<div class="flex gap-3 justify-center">
							<button class="flex h-11 items-center border border-transparent gap-2.5 rounded-full bg-[#F3F4F6] px-4 transition-all hover:border-orange hover:bg-[#FFF3E9]  text-sm hover:text-orange">

								<i class="fa-brands fa-accessible-icon  transition-all  "></i>

							</button>

							<button class="flex h-11 items-center border border-transparent gap-2.5 rounded-full bg-[#F3F4F6] px-4 transition-all hover:border-orange hover:bg-[#FFF3E9]  text-sm hover:text-orange">
								<i class="fa-light fa-globe text-sm transition-all font-semibold"></i>

								<span>EN</span>
							</button>
						</div>
						<div class="flex items-center justify-center mt-8">
							<img src="assets/images/Logo2.svg" class="max-w-full" alt/>
						</div>

					</div>

				</div>

				<div class="  items-center gap-3 hidden lg:flex">
					<button class="flex h-11 items-center border border-transparent gap-2.5 rounded-full bg-white px-4 transition-all hover:border-orange hover:bg-[#FFF3E9]  text-sm hover:text-orange">

						<i class="fa-regular fa-search text-sm transition-all font-semibold"></i>

						<span>Search</span>
					</button>

					<button class="flex h-11 items-center border border-transparent gap-2.5 rounded-full bg-white px-4 transition-all hover:border-orange hover:bg-[#FFF3E9]  text-sm hover:text-orange">

						<i class="fa-brands fa-accessible-icon  transition-all  "></i>

					</button>

					<button class="flex h-11 items-center border border-transparent gap-2.5 rounded-full bg-white px-4 transition-all hover:border-orange hover:bg-[#FFF3E9]  text-sm hover:text-orange">
						<i class="fa-light fa-globe text-sm transition-all font-semibold"></i>

						<span>EN</span>
					</button>
				</div>
			</div>
		</div>
	</nav>
</header>
